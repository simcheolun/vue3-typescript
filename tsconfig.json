{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vue", "vue/ref-macros"],
    "baseUrl": "./src", // baseUrl을 설정하여 src 폴더를 기준으로 모듈을 찾도록 합니다.
    "paths": {
      "@/*": ["*"] // @로 시작하는 경로를 src 폴더 내로 매핑합니다.
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
